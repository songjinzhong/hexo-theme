#blog-content{
    margin 50px auto 0
    max-width 1000px
    /*
     * overview css is here!
     */
    & .overview{
        font-size: 28px;
        line-height: 40px;
        margin-bottom: 20px;
        & .web-feed{
            float right
            font-size 23px
            &:before{
                font-family 'icomoon'
                content: "\ea9b"
            }
        }
    }
    /*
     * content css is here!   
     *   
     */
    & .content{
        /*
         * left part
         */
        & .left-part{
            float left
            & .archives_sort{
                width 300px
                border 1px solid #ccc
                padding 15px
                margin-bottom 30px
                & h2{
                    font-size 22px
                    font-weight normal
                    border-bottom 1px dashed #ccc
                    width 590px
                    max-width 100%
                    line-height 2
                    margin-bottom 15px
                }
                & ul{
                    list-style-type disc
                    padding-left 20px
                    & li{
                        line-height 28px
                        margin-bottom 5px
                    }
                }
            }
            & .weibo-frame{
                height 400px
                border 1px solid #ccc
            }
        }
        /*
         * right part recent-one   
         */
        & .recent-one{
            width 590px
            padding 20px
            background #f3f3f3
            border-radius 2px
            box-shadow 2px 2px 4px #e2e2e2
        }
    }
}