#blog-content{
    margin 50px auto 0
    max-width 1000px
    /*
     * overview css is here!
     */
    & .overview{
        font-size: 28px;
        line-height: 40px;
        margin-bottom: 20px;
        & .web-feed{
            float right
            font-size 23px
            &:before{
                font-family 'icomoon'
                content: "\ea9b"
            }
        }
    }
    /*
     * content css is here!   
     *   
     */
    & .content{
        /*
         * left part
         */
        & .left-part{
            float left
            & .archives_sort{
                width 300px
                border 1px solid #ccc
                padding 15px
                margin-bottom 30px
                & h2{
                    font-size 22px
                    font-weight normal
                    border-bottom 1px dashed #ccc
                    width 590px
                    max-width 100%
                    line-height 2
                    margin-bottom 15px
                }
                & ul{
                    list-style-type circle
                    padding-left 20px
                    & li{
                        line-height 28px
                        margin-bottom 5px
                    }
                }
            }
            & .weibo-frame{
                height 400px
                border 1px solid #ccc
            }
        }
        /*
         * right part recent-one   
         */
        & .recent-one{
            float right
            width 620px
            padding 15px
            background #f3f3f3
            border-radius 2px
            box-shadow 2px 2px 4px #e2e2e2
            & h3{
                font-size 22px
                line-height 2
                border-bottom 1px dashed #ccc
                margin-left 15px
            }
            & .post-info{
                display block
                font-size: 14px;
                color: #999;
                line-height 1.5
                margin 5px 0 10px 0
            }
            & .post-content{
                & .post-image{
                    float: right;
                    width: 120px;
                    margin-left 10px
                    margin-top -20px
                    max-height 150px
                    overflow: hidden;
                }
                & p{
                    font-size: 15px;
                    line-height: 30px;
                    text-indent: 2em;
                    padding-bottom: 15px;
                    margin-bottom: 15px;
                    border-bottom: 1px dashed #ccc;
                }
            }
        }
        & .recent-posts{
            float right
            margin-bottom 30px
            width 620px
            padding 15px
            & h2{
                font-size: 22px;
                font-weight: normal;
                border-bottom: 1px dashed #ccc;
                max-width: 100%;
                line-height: 2;
                margin-bottom: 15px;
                margin-top: 40px;
                & a{
                    float right
                    font-size 14px
                    margin-top 10px
                }
            }
            & ul{
                padding-left 30px
                list-style-type: disc;
                & li{
                    line-height 28px
                    margint-bottom 5px
                    & span{
                        color #999
                    }
                }
            }
        }
    }
    /*
     * duoshuo part css   
     */
    & .duoshuo-part{
        margin-top 30px
        clear both
    }
}