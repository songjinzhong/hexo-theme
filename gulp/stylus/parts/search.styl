.big-search{
    display none
    padding 15px
    padding-bottom 30px
    background #f3f3f3
    position relative
    box-shadow: 2px 2px 4px #e2e2e2;
    & .close-icon{
        font-size 18px
        position absolute
        cursor pointer
        right 15px
        top 5px
    }
    & .search-container{
        & .search-form{
            & .search-input{
                border 0
                border-bottom 1px solid black
                outline: none;
                background: transparent;
                width 80%
                padding 5px
                font-size 16px
            }
        }
        & .js-search-results{
            font-size 16px
            line-height 1.5
            & p{
                margin 5px 0
            }
            & ul{
                padding-left 20px
                list-style-type disc
                & li{
                    & a{
                        color #ef593e
                        padding-right 5px
                        &:hover{
                            color black
                        }
                    }
                    & span{
                        color #999
                        font-size 14px
                    }
                }
            }
        }
    }
}
.open{
    display block
}