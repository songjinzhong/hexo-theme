.tools{
    position fixed
    right 20px
    bottom 60px
    z-index 10
    & i{
        cursor pointer
        display block
        width 30px
        height 30px
        font-size 30px
        padding 5px
        border 1px dashed #e66161
        color #e66161
        mytransition(color 0.5s)
        &:hover{
            color black
        }
    }
    @media (max-width:600px){
        right 10px
        background-color rgba(228,218,218,0.5)
    }
}