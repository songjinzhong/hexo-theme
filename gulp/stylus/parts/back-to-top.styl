.tools{
    position fixed
    right 20px
    bottom 60px
    z-index 10
    & a{
        text-decoration none
        display block
        font-size 30px
        padding 3px 5px
        border 1px dashed #e66161
        color #e66161
        mytransition(color 0.5s)
        &:hover{
            color black
        }
    }
    @media (max-width:600px){
        right 10px
        background-color rgba(228,218,218,0.5)
        & a{
            font-size 25px
            padding 2px 5px
        }
    }
}