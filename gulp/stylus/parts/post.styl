.post{
    background-color: rgba(250,250,253,0.7);
    -webkit-box-shadow: 0 0 10px 0.1px #d4d4d4;
    box-shadow: 0 0 10px 0.1px #d4d4d4;
    max-width 920px
    min-width 200px
    box-sizing border-box
    padding 15px 70px
    margin 10px auto 20px
    & .overview{
        font-size: 22px;
        line-height: 35px;
        margin-bottom: 5px;
        margin-top: 10px
        padding-bottom 10px
        border-bottom 1px solid black
        & .web-feed{
            float: right;
            font-size: 23px;
            &:before{
                font-family 'icomoon'
                content: "\ea9b"
            }
        }
    }
    & .post-info{
        border-bottom 1px solid #d3d3d3
        padding 20px 0
        & h1{
            font-size 25px
            line-height 2
            text-align center
            font-weight bold
        }
        & .author-info{
            color #999
            line-height 2
            
            .author{
                float:right
                padding 0 10px
                & a{
                    padding-left 5px
                }
            }
            .date{
                & span{
                    color black
                    padding-left 5px
                }
            }
        }
    }
    & .post-markdown{

    }
    & .web-info{
        margin-top 25px
        padding-bottom 10px
        color #aaa
        text-align right
        border-top 1px solid #666
        padding-top 10px
        text-align center
        font-size 14px
        & a{
            color #4a75b5
        }
    }
}